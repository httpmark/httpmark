{
  "manifest_version": 2,
  "name": "WebAppTest Test Agent",
  "description": "Provides test orchestration",
  "version": "0.1",
  "background": {
    "scripts": ["build/background.js"],
    "persistent": false
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "js": ["build/content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": "default-src 'self'; connect-src http://127.0.0.1:3001",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
